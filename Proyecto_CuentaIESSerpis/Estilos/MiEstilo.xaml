<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Espaciado">
        <Setter Property="Control.Margin" Value="8"/>
    </Style>

    <Style x:Key="Titulo" TargetType="Label">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="TextBoxes" BasedOn="{StaticResource Espaciado}">
        <Setter Property="Control.Width" Value="160"/>
        <Setter Property="Control.Height" Value="25"/>
    </Style>

    <!-- He remplazado el estilo estatico de los botones por el dinamico de MaterialDesign
        Sigo utilizando este estilo para los linkButtons-->
    <Style x:Key="Botones" BasedOn="{StaticResource Espaciado}">
        <Setter Property="Control.Width" Value="120"/>
        <Setter Property="Control.Height" Value="23"/>
    </Style>


    <Style x:Key="TxtBoxesStackPanel" BasedOn="{StaticResource Espaciado}">
        <Setter Property="Control.Width" Value="60"/>
        <Setter Property="Control.Height" Value="25"/>
    </Style>

    <Style x:Key="LinkButton" TargetType="Button" BasedOn="{StaticResource Botones}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="White" />
    </Style>

</ResourceDictionary>